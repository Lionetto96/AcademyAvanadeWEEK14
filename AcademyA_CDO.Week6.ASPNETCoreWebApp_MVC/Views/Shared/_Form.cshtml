@{
}
@model EmployeeEditViewModel

<div class="form-group">
    <label asp-for="EmployeeCode" class="control-label"></label>
    <input required asp-for="EmployeeCode" class="form-control" />
    <span asp-validation-for="EmployeeCode" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="FirstName" class="control-label"></label>
    <input required asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LastName" class="control-label"></label>
    <input required asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Birthdate" class="control-label"></label>
    <input required asp-for="Birthdate" class="form-control" />
    <span asp-validation-for="Birthdate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Level" class="control-label"></label>
    @Html.DropDownListFor(model =>
    model.Level,
    Model.AvailableLevels,
    "-- Select a level --",
    new { @class = "form-control", required = "required"})
    <span asp-validation-for="Level" class="text-danger"></span>
</div>